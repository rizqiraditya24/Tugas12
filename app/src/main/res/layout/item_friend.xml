<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_13sdp"
    app:cardElevation="@dimen/_12sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/backgroundCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp">

        <ImageView
            android:id="@+id/iv_display"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/display_image"/>

        <EditText
            android:id="@+id/et_name"
            style="@style/TittleEditTextFriend"
            android:autofillHints="name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_display"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/et_hobby"
            style="@style/BodyEditTextFriend"
            android:autofillHints="name"
            app:layout_constraintStart_toEndOf="@+id/iv_display"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            tools:ignore="LabelFor,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/et_school"
            style="@style/BodyEditTextFriend"
            android:autofillHints="name"
            app:layout_constraintStart_toEndOf="@+id/iv_display"
            app:layout_constraintTop_toBottomOf="@id/et_hobby"
            tools:ignore="LabelFor,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_save"
            style="@style/button"
            android:text="@string/edit"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
